<div class="modal-footer">
    <p class="lead text-right">PharmacySpace</p>
    <a href="/users/logout">Logout</a>
</div>

<div class="jumbotron">
    <h1 class="display-5">Create Patient Profile</h1>
    <p class="lead">Please fill in the following fields to create the patient profile.</p>
    <hr class="my-4">

    <form>
        <div class="form-group row">
            <div class="col-md-4">
                <label for="name">Name</label>
                <input type="name"
                       id="name"
                       name="name"
                       class="form-control"
                       placeholder="Enter Name"
                       value="<%= typeof name != 'undefined' ? name : '' %>" />
            </div>
            <div class="col-md-2">
                <label for="title">Title</label>
                <select id="title"
                        name="title"
                        class="form-control"
                        type="text"
                        value="<%= typeof title != 'undefined' ? title : '' %>" />
                <option selected>Choose...</option>
                <option>Miss</option>
                <option>Mr.</option>
                <option>Mrs.</option>
                <option>Ms.</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email"
                   id="email"
                   name="email"
                   class="form-control"
                   value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>

        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel"
                   id="phone"
                   name="phone"
                   class="form-control"
                   pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                   value="<%= typeof phone != 'undefined' ? phone : '' %>" />
        </div>

        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        </div>

        <div class="form-group row">
            <div class="col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="col-md-4">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>QC</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            <div class="col-md-1">
                <a href="/pharmacy/home" class="btn btn-secondary">Back</a>
            </div>
            
        </div>
    </form>

</div>