<div class="modal-footer">
    <p class="lead text-right">PharmacySpace</p>
    <a href="/users/logout">Logout</a>
</div>

<div class="jumbotron">
    <h1 class="display-5">Patient Profile</h1>
    <p class="lead">Please insert the patient email to see the full profile.</p>
    <hr class="my-4">

    <form class="form-inline my-2 my-lg-0">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email"
                   id="email"
                   name="email"
                   class="form-control"
                   value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="name"
                   id="name"
                   name="name"
                   class="form-control"
                   value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date"
                   id="date"
                   name="date"
                   class="form-control"
                   value="<%= typeof date != 'undefined' ? date : '' %>" />
        </div>
    </form>

    <a class="btn btn-secondary btn-lg" href="/pharmacy/home" role="button">Back</a>

</div>